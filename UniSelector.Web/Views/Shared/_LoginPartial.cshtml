@using Microsoft.AspNetCore.Identity
@using UniSelector.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="flex items-center gap-3">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="flex items-center gap-3">
            <form class="flex items-center " id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <a id="manage" class="text-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                    Hello @UserManager.GetUserName(User)!
                </a>
                <button id="logout" type="submit" class="btn-getstarted bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition duration-300">
                    Logout
                </button>
            </form>
        </div>
    }
    else
    {
        <div class="flex items-center gap-3">
            <a class="btn-getstarted bg-blue-500 hover:bg-blue-600 text-blue-500 px-4 py-2 rounded-lg transition duration-300" id="register" asp-area="Identity" asp-page="/Account/Register">
                Register
            </a>
            <a class="btn-getstarted bg-blue-100 hover:bg-blue-200 text-blue-500 px-4 py-2 rounded-lg transition duration-300" id="login" asp-area="Identity" asp-page="/Account/Login">
                Login
            </a>
        </div>
    }
</div>