
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using UniSelector.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="flex items-center gap-3">
    <div class="flex items-center gap-3">
        <a class="btn-getstarted bg-blue-500 hover:bg-blue-600 text-blue-500 px-4 py-2 rounded-lg transition duration-300" id="register" asp-area="Identity" asp-page="/Account/Register">
            Register
        </a>
        <a class="btn-getstarted bg-blue-100 hover:bg-blue-200 text-blue-500 px-4 py-2 rounded-lg transition duration-300" id="login" asp-area="Identity" asp-page="/Account/Login">
            Login
        </a>
    </div>
</div>