@using UniSelector.Utility
@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniSelector</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/UniSelector.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="/path/to/your/custom-datatable.css">



    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />
    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand  " asp-area="" asp-controller="Home" asp-action="Index">UniSelector</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="@Constants.AreaUser" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link " asp-area="@Constants.AreaUser" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole(Constants.RoleAdmin))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Content Manegement
                                </a>
                                <ul class="dropdown-menu">
                                    @* <li class="nav-item">
                                        <a class="dropdown-item" asp-area="@Constants.AreaAdmin" asp-controller="@Constants.ControllerCategory" asp-action="@Constants.ActionIndex">Category</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="@Constants.AreaAdmin" asp-controller="@Constants.ControllerProduct" asp-action="@Constants.ActionIndex">Product</a>
                                    </li> *@
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="@Constants.AreaAdmin" asp-controller="@Constants.ControllerUserManagement" asp-action="@Constants.ActionIndex">Users Managment Table</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="@Constants.AreaAdmin" asp-controller="@Constants.ControllerUniversity" asp-action="@Constants.ActionIndex">Universities Table</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="@Constants.AreaAdmin" asp-controller="Faculty" asp-action="@Constants.ActionIndex">Faculties Table</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="@Constants.AreaAdmin" asp-controller="StandardFaculty" asp-action="@Constants.ActionIndex">Standard Faculties Table</a>
                                    </li>

                                </ul>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link " asp-area="@Constants.AreaUser" asp-controller="Home" asp-action="UniversityView">Universities</a>
                        </li>
                        @if (User.IsInRole(Constants.RoleUniversity))
                        {
                            <li class="nav-item">
                                <a class="nav-link " asp-area="@Constants.AreaInstitution" asp-controller="StudentRequest" asp-action="Index">Requests</a>
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-4">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-primary text-muted">
        <div class="container">
            &copy; 2024 - UniSelector - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/2.1.5/js/dataTables.min.js" asp-append-version="true"></script>

    <script src="https://cdn.tiny.cloud/1/pwjhljvwri0pu4m73g7nhms7wuy729u9h8z50efbfr4iia0p/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
