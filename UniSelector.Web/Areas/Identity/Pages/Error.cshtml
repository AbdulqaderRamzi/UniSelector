@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container" style="margin-top: 5rem;">
    <div class="card shadow border-0">
        <div class="card-header bg-danger bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Error Occurred</h2>
                </div>
            </div>
        </div>
        <div class="card-body bg-light p-4">
            <div class="text-center">
                <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 3rem;"></i>
                <h4 class="text-danger mt-3">An error occurred while processing your request.</h4>

                @if (Model.ShowRequestId)
                {
                    <p class="text-muted mt-3">
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </p>
                }

                @if (System.Diagnostics.Debugger.IsAttached)
                {
                    <div class="alert alert-warning mt-4">
                        <h5>Development Mode</h5>
                        <p>Development environment should not be enabled in deployed applications.</p>
                        <p>For local debugging, set the <code>ASPNETCORE_ENVIRONMENT</code> environment variable to <code>Development</code>.</p>
                    </div>
                }

                <a asp-area="User" asp-controller="Home" asp-action="Index"
                   class="btn btn-primary mt-3">Return to Home</a>
            </div>
        </div>
    </div>
</div>