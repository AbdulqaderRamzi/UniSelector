@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout !=  null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}

<div class="container " style="margin-top: 6rem;">
    <div class="row">
        <div class="col-lg-3">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Account Management</h5>
                    <partial name="_ManageNav" />
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="p-2" >
                    @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
    <style>
        .section-container {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            background-color: #ffffff;
        }

        .section-title {
            font-size: 1.1rem;
            font-weight: 500;
            color: #495057;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #e9ecef;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .btn i {
            margin-right: 0.5rem;
        }

        .gap-2 {
            gap: 0.5rem;
        }

        .flex-wrap {
            flex-wrap: wrap;
        }

        .alert {
            margin-bottom: 1rem;
        }

            .alert:last-child {
                margin-bottom: 0;
            }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn i {
                font-size: 1.1rem;
            }
    </style>
}
