@page
@using UniSelector.Web.Areas.Identity.Pages.Account.Manage
@model ProfileModel
@{
    ViewData["Title"] = "Edit Profile";
    ViewData["ActivePage"] = ManageNavPages.Profile;
}

<div class="container" >
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient ml-0 py-2">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Edit Profile</h2>
                </div>
            </div>
        </div>
        <div class="card-body bg-light p-4">
            <div class="row">
                

                <!-- Form Content -->
                <div class="col-md-12">
                    <partial name="_StatusMessage" for="StatusMessage" />
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Personal Information -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Input.Name" class="form-label">Full Name</label>
                                    <input asp-for="Input.Name" class="form-control" />
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Input.Nationality" class="form-label">Nationality</label>
                                    <input asp-for="Input.Nationality" class="form-control" />
                                    <span asp-validation-for="Input.Nationality" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Birth Information -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Input.BirthDate" class="form-label">Date of Birth</label>
                                    <input asp-for="Input.BirthDate" class="form-control" type="date" />
                                    <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Input.PlaceOfBirth" class="form-label">Place of Birth</label>
                                    <input asp-for="Input.PlaceOfBirth" class="form-control" />
                                    <span asp-validation-for="Input.PlaceOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Input.Address" class="form-label">Address</label>
                                    <textarea asp-for="Input.Address" class="form-control" rows="2"></textarea>
                                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Academic Information -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Input.Grade" class="form-label">High School Grade</label>
                                    <input asp-for="Input.Grade" class="form-control" type="number" step="0.01" />
                                    <span asp-validation-for="Input.Grade" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Input.HighSchoolGraduationYear" class="form-label">Graduation Year</label>
                                    <input asp-for="Input.HighSchoolGraduationYear" class="form-control" type="number" />
                                    <span asp-validation-for="Input.HighSchoolGraduationYear" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="row">
                            <div class="col-12">
                                <button id="update-profile-button" type="submit" class="btn btn-primary">
                                    <i class="bi bi-save me-2"></i>Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}