@page
@model UniSelector.Web.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white py-4">
                    <h2 class="text-center mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="row">
                            <div class="form-floating mb-3 col-md-6">
                                <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Full Name" />
                                <label asp-for="Input.Name" class="text-muted">Full Name</label>
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-md-6">
                                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="Full Name" />
                                <label asp-for="Input.PhoneNumber" class="text-muted">Phone Number</label>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-md-6">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                                <label asp-for="Input.Password" class="text-muted">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-md-6">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
                                <label asp-for="Input.ConfirmPassword" class="text-muted">Confirm Password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-md-12">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="text-muted">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-md-12">
                                <input asp-for="Input.Address" class="form-control" placeholder="Address" />
                                <label asp-for="Input.Address" class="text-muted">Address</label>
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-md-6">
                                <input asp-for="Input.Grade" class="form-control" placeholder="Grade" />
                                <label asp-for="Input.Grade" class="text-muted">Grade</label>
                                <span asp-validation-for="Input.Grade" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-md-6">
                                <input asp-for="Input.BirthDate" class="form-control" placeholder="Birth Date" />
                                <label asp-for="Input.BirthDate" class="text-muted">Birth Date</label>
                                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-md-6">
                                <input asp-for="Input.Nationality" class="form-control" placeholder="Nationality" />
                                <label asp-for="Input.Nationality" class="text-muted">Nationality</label>
                                <span asp-validation-for="Input.Nationality" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-md-6">
                                <input asp-for="Input.PlaceOfBirth" class="form-control" placeholder="Place of Birth" />
                                <label asp-for="Input.PlaceOfBirth" class="text-muted">Place of Birth</label>
                                <span asp-validation-for="Input.PlaceOfBirth" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 col-md-6">
                                <input asp-for="Input.HighSchoolGraduationYear" class="form-control graduation-year" type="number" min="1900" max="@DateTime.Now.Year" step="1" placeholder="High School Graduation Year" list="graduationYears" />
                                <label asp-for="Input.HighSchoolGraduationYear" class="text-muted">High School Graduation Year</label>
                                <span asp-validation-for="Input.HighSchoolGraduationYear" class="text-danger"></span>
                            </div>
                            

                            <div class="form-floating mb-3 col-md-6">
                                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                    <option>-Select Role-</option>
                                </select>
                                <label asp-for="Input.Role" class="text-muted">Role</label>
                            </div>
                        </div>
                        <div class="d-grid">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Register</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <p class="mb-3">Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary">Log in</a></p>
                    <div class="text-center">
                        <h5>Or register with:</h5>
                        <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var graduationYearInput = document.querySelector('.graduation-year');
            var currentYear = new Date().getFullYear();
            graduationYearInput.max = currentYear;
        });
    </script>
}