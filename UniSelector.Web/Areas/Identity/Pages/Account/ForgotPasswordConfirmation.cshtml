@page
@model UniSelector.Web.Areas.Identity.Pages.Account.ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<div class="container" style="margin-top: 6rem;">
    <div class="card shadow border-0">
        <div class="card-header bg-info bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">@ViewData["Title"]</h2>
                </div>
            </div>
        </div>
        <div class="card-body bg-light p-4">
            <div class="text-center">
                <i class="bi bi-envelope-check-fill text-info" style="font-size: 3rem;"></i>
                <h4 class="mt-3">Check Your Email</h4>
                <p class="lead">Please check your email for password reset instructions.</p>
                <div class="mt-4">
                    <a asp-page="./Login" class="btn btn-primary">Return to Login</a>
                    <a asp-page="./ResendEmailConfirmation" class="btn btn-outline-secondary">
                        Didn't receive the email?
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>