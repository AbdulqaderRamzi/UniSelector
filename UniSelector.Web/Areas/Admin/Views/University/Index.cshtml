@model List<University>

<div class="p-4 m-4">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white">University List</h2>
                </div>
            </div>
        </div>
        <div calss="card-body" style="padding:20px">
            <div class="row  pb-3">
                <div class=" col-6"></div>
                <div class=" col-6 text-end">
                    <a asp-controller="University" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add new university
                    </a>
                </div>
            </div>

            <table class="table table-hover table-striped table-bordered display" style="width:100%">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <input type="number" id="feesFilter" class="form-control" placeholder="Max Fees">
                    </div>
                    <div class="col-md-3">
                        <select id="facultyFilter" class="form-control">
                            <option value="">All Faculties</option>
                            <option value="Engineering">Engineering</option>
                            <option value="Medicine">Medicine</option>
                            <!-- Add more faculty options -->
                        </select>
                    </div>
                    <div class="col-md-3">
                        <input type="number" id="rankFilter" class="form-control" placeholder="Max Rank">
                    </div>
                    <div class="col-md-3">
                        <button id="applyFilters" class="btn btn-primary">Apply Filters</button>
                    </div>
                </div>
                <thead class="thead-dark text-light">
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Location</th>
                        <th>Rank In Kuwait</th>
                        <th>Budget</th>
                        <th></th>
                    </tr>
                </thead>   
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.KuwaitRank))
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.type</td>
                            <td>@obj.location</td>
                            <td>@obj.KuwaitRank</td>
                            <td>@obj.Budget</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="University" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class=" bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a onclick="Delete('/Admin/University/Delete?id=@obj.Id')" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts{
    <script src = "~/js/university.js"></script>
    <script src = "~/js/Delete.js"></script>
}