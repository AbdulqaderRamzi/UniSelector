@model StandardFaculty

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@(Model.Id != 0 ? "Update" : "Add") Standard Faculty</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="NameArabic"></label>
            <input asp-for="NameArabic" class="form-control" />
            <span asp-validation-for="NameArabic" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NameEnglish"></label>
            <input asp-for="NameEnglish" class="form-control" />
            <span asp-validation-for="NameEnglish" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">@(Model.Id != 0 ? "Update" : "Add")</button>
        <a asp-controller="StandardFaculty" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}