@model ApplicationUser

<div class="p-4 m-4">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Update User</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row" style="margin-left: 0px; margin-right: 0px;">
                <input asp-for="Id" hidden />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="border-primary p-3 bg-white">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" class="form-control border-0 shadow" />
                        <label asp-for="Name" class="ms-2"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Email" class="form-control border-0 shadow" />
                        <label asp-for="Email" class="ms-2"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Address" class="form-control border-0 shadow" />
                        <label asp-for="Address" class="ms-2"></label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Grade" class="form-control border-0 shadow" />
                        <label asp-for="Grade" class="ms-2"></label>
                        <span asp-validation-for="Grade" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="BirthDate" class="form-control border-0 shadow" type="date" />
                        <label asp-for="BirthDate" class="ms-2"></label>
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Nationality" class="form-control border-0 shadow" />
                        <label asp-for="Nationality" class="ms-2"></label>
                        <span asp-validation-for="Nationality" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="PlaceOfBirth" class="form-control border-0 shadow" />
                        <label asp-for="PlaceOfBirth" class="ms-2"></label>
                        <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="HighSchoolGraduationYear" class="form-control border-0 shadow" />
                        <label asp-for="HighSchoolGraduationYear" class="ms-2"></label>
                        <span asp-validation-for="HighSchoolGraduationYear" class="text-danger"></span>
                    </div>
                    <div class="row py-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="@Constants.ControllerUserManagement" asp-action="@Constants.ActionIndex" class="btn btn-outline-primary form-control">Back To List</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}